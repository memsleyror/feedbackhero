<h1>Users</h1>

<%= link_to "New User", new_user_path %><br><br>

<table class="table table-striped table-bordered bootstrap-datatable datatable">

	<thead>
	  <tr>
		  <th>First Name</th>
		  <th>Last Name</th>
		  <th>Pic</th>
		  <th>Email</th>
		  <th>Role</th>
		  <th>Status</th>
		  <th>Actions</th>
	  </tr>
  	</thead>   

	<% @users.each do |user| %>
	
	<tbody>
		<tr>
			<td><%= user.first_name %></td>
			<td><%= user.last_name %></td>
			<td><%= image_tag user.profile_pic_url(:thumb).to_s %></td>
			<td class="center"><%= user.email %></td>
			<td class="center"><%= user.role.role_name %></td>
			<td class="center"><span class="label label-success">Active</span></td>
			<td class="center">	
				<% if can? :update, User %>
					<%= link_to 'Edit', edit_user_path(user), :class => 'btn btn-success' %>
				<% end %>
				<% if can? :destroy, User %>
					<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger' %>
				<% end %>
			</td>	
		</tr>
	
	<% end %>	
</table>

