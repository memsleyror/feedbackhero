<h1>Give Feedback</h1>

<%= @clientfeedback.user.first_name %> <%= @clientfeedback.user.last_name %>
has made this request:
<%= @clientfeedback.request_body %><br/>
for this situation:
<%= @clientfeedback.situation %><br/>

<%= form_for @clientfeedback do |f| %>
	<p>

		<%= f.label :positive %><br/>
		<%= f.text_area :positive %><br/>
		<%= f.label :growth_area %><br/>
		<%= f.text_area :growth_area %><br/>

		
		<%= f.hidden_field :hide, :value => true %>
		<%= f.hidden_field :responded_to, :value => true %>
		
	</p>

	<p>
		<%= f.submit "Update" %>
	</p>


<% end %>